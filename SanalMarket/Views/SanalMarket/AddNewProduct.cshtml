@model ProductViewModel
@{
    ViewBag.Title = "Ürün Ekleme Sayfası";
}


<h1>Ürün Ekleme Sayfasına Hoşgeldiniz...</h1>


<form method="post" enctype="multipart/form-data">
    <label asp-for="Name" class="form-label">Ürün Adı</label>
    <input asp-for="Name" type="text" class="form-control"></input>

    <label asp-for="Price" class="form-label">Fiyatı</label>
    <input asp-for="Price" type="number" class="form-control"></input>

    <label asp-for="StockQuantity" class="form-label">Stock Adedi</label>
    <input asp-for="StockQuantity" type="number" class="form-control"></input>

    <label asp-for="Image" class="form-label">Fotografı</label>
    <input asp-for="Image" type = "file" class="form-control"></input>

    <button class="btn btn-outline-success mt-3 w-25">Kaydet</button>
</form>